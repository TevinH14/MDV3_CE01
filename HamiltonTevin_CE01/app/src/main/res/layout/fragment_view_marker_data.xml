<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_TitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_DescriptionView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_TitleView"
        app:layout_constraintStart_toStartOf="@+id/textView_TitleView"
        app:layout_constraintTop_toBottomOf="@+id/textView_TitleView" />

    <ImageView
        android:id="@+id/imageView_capturedImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView_DescriptionView"
        app:layout_constraintStart_toStartOf="@+id/textView_DescriptionView"
        app:layout_constraintTop_toBottomOf="@+id/textView_DescriptionView"
        app:srcCompat="@drawable/ic_image_gray_24dp"
        android:contentDescription="@string/todo" />
</androidx.constraintlayout.widget.ConstraintLayout>